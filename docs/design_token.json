{
  "meta": {
    "name": "NeoDash Gradient System",
    "version": "1.0.0",
    "description": "Tokens distilled from modern gradient dashboards & landing UIs; tuned for Tailwind + shadcn-vue."
  },

  "palette": {
    "primary":   { "$type": "color", "$value": "#3B82F6", "$description": "Main action & accent" },
    "secondary": { "$type": "color", "$value": "#6366F1", "$description": "Secondary accent (charts/links)" },
    "success":   { "$type": "color", "$value": "#22C55E" },
    "warning":   { "$type": "color", "$value": "#FBBF24" },
    "danger":    { "$type": "color", "$value": "#EF4444" },
    "surface":   { "$type": "color", "$value": "#FFFFFF", "$description": "Card & sheet background" },
    "surfaceAlt":{ "$type": "color", "$value": "#F8FAFC", "$description": "Table rows / subtle background" },
    "textHigh":  { "$type": "color", "$value": "#111827" },
    "textLow":   { "$type": "color", "$value": "#6B7280" }
  },

  "gradients": {
    "appBackground": {
      "$type": "gradient",
      "$value": ["#8EC5FC 0%", "#E0C3FC 100%"],
      "$description": "Full-viewport backdrop"
    },
    "ctaGlow": {
      "$type": "gradient",
      "$value": ["#A726FF 0%", "#F72585 100%"],
      "$description": "Used behind hero blobs & buttons"
    }
  },

  "radii": {
    "none":   { "$type": "radius", "$value": "0" },
    "sm":     { "$type": "radius", "$value": "6px" },
    "md":     { "$type": "radius", "$value": "12px" },
    "lg":     { "$type": "radius", "$value": "16px" }
  },

  "shadows": {
    "sm": { "$type": "shadow", "$value": "0 1px 3px rgba(0,0,0,.08)" },
    "md": { "$type": "shadow", "$value": "0 2px 6px rgba(0,0,0,.10)" },
    "lg": { "$type": "shadow", "$value": "0 4px 12px rgba(0,0,0,.12)" }
  },

  "spacing": {
    "0":  { "$type": "spacing", "$value": "0" },
    "1":  { "$type": "spacing", "$value": "4px" },
    "2":  { "$type": "spacing", "$value": "8px" },
    "3":  { "$type": "spacing", "$value": "12px" },
    "4":  { "$type": "spacing", "$value": "16px" },
    "6":  { "$type": "spacing", "$value": "24px" },
    "8":  { "$type": "spacing", "$value": "32px" }
  },

  "typography": {
    "fontFamily":       { "$type": "fontFamily", "$value": "'Inter', sans-serif" },
    "h1": { "size": "32px", "weight": 700, "lineHeight": 1.25 },
    "h2": { "size": "24px", "weight": 700, "lineHeight": 1.3 },
    "h3": { "size": "20px", "weight": 600, "lineHeight": 1.35 },
    "body": { "size": "16px", "weight": 400, "lineHeight": 1.5 },
    "caption": { "size": "14px", "weight": 400, "lineHeight": 1.4 }
  },

  "motion": {
    "duration": {
      "fast":   "150ms",
      "normal": "300ms",
      "slow":   "500ms"
    },
    "easing": {
      "standard": "cubic-bezier(0.22, 1, 0.36, 1)",
      "overshoot": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "animations": {
      "fadeSlideUp": {
        "from": { "opacity": 0, "transform": "translateY(12px)" },
        "to":   { "opacity": 1, "transform": "translateY(0)" }
      }
    }
  },

  "components": {
    "card": {
      "padding": "{spacing.4}",
      "radius": "{radii.md}",
      "shadow": "{shadows.md}",
      "background": "{palette.surface}"
    },
    "statTile": {
      "layout": "horizontal",
      "gap": "{spacing.2}",
      "iconBackground": "{palette.primary}",
      "iconRadius": "{radii.sm}"
    },
    "sidebar": {
      "width": "260px",
      "background": "{palette.surface}",
      "activeColor": "{palette.primary}",
      "radius": "{radii.lg}"
    },
    "buttonPrimary": {
      "paddingY": "{spacing.2}",
      "paddingX": "{spacing.4}",
      "radius": "{radii.sm}",
      "textColor": "#FFFFFF",
      "background": "{palette.primary}",
      "hoverShadow": "{shadows.lg}"
    },
    "chart": {
      "lineColors": ["{palette.primary}", "{palette.secondary}"],
      "gridColor": "rgba(0,0,0,.05)",
      "tooltipRadius": "{radii.sm}"
    }
  }
}
